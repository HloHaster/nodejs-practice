<h1 style="margin-bottom: 10px; margin-top: 20px;">CATEGORIES</h1>


{{#if haveCategories}}
    <div class="posts" style="display: flex; flex-wrap: wrap; justify-content: space-between">
        {{#each categories}}
            <div class="card" style="width: 100%; margin-bottom: 10px;">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: bold;"><a href="/categories/{{_id}}">{{name}}</a></h5>
                    {{#if excerpt}}
                        <p>Excerpt: {{excerpt}}</p>
                    {{/if}}
                    <p>Created: {{createdAt}}</p>
                    <p>Updated: {{updatedAt}}</p>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div>Nothing Found</div>
{{/if}}